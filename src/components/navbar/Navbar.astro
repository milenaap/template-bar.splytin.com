---
import { useTranslations } from '../../i18n/utils';
import LangSelector from './LangSelector.jsx';
import type { SupportedLang } from '../../i18n/utils';
import { SITE_NAME } from 'astro:env/client';

interface Props {
  lang: SupportedLang;
}

const { lang } = Astro.props;
const t = useTranslations(lang);
const company = SITE_NAME;

const options = [
  { code: 'es', label: t('navbar.lang_es') },
  { code: 'en', label: t('navbar.lang_en') }
];
---

<div class="relative z-[9999]">
  <input type="checkbox" id="menu-toggle" class="peer hidden" />

  <header class="w-full fixed top-0 left-0 bg-gradient-to-b from-black to-transparent z-[9999]">
    <nav class="flex items-center justify-between p-6 lg:px-8">
      <!-- Logo -->
      <div class="flex lg:flex-1">
        <a href="/" class="-m-1.5 p-1.5 flex items-center">
          <span class="sr-only">{company}</span>
          <img class="w-20 h-auto" src="/images/logo.webp" alt="logo" />
        </a>
      </div>

      <!-- Mobile menu button -->
      <label for="menu-toggle" class="lg:hidden cursor-pointer -m-2.5 p-2.5 text-white rounded-md z-[9999]">
        <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5"
            d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
        </svg>
      </label>

      <!-- Desktop menu -->
      <div class="hidden lg:flex lg:gap-x-12">
        <a href={`/${lang}/`} class="text-xl font-semibold text-white">{t("navbar.home")}</a>
        <a href={`/${lang}/about`} class="text-xl font-semibold text-white">{t("navbar.about")}</a>
        <a href={`/${lang}/menu`} class="text-xl font-semibold text-white">{t("navbar.menu")}</a>
        <a href={`/${lang}/contact`} class="text-xl font-semibold text-white">{t("navbar.contact")}</a>
        <a href={`/${lang}/map`} class="text-xl font-semibold text-white">{t("navbar.map")}</a>
      </div>

      <!-- LangSelector + login -->
      <div class="hidden lg:flex lg:flex-1 lg:justify-end items-center">
        <div class="mr-5">
          <LangSelector lang={lang} options={options} client:load />
        </div>
      </div>
    </nav>
  </header>

  <!-- Overlay -->
  <div class="fixed inset-0 bg-black/50 opacity-0 pointer-events-none transition-all duration-300 peer-checked:opacity-100 peer-checked:pointer-events-auto lg:hidden z-[9998]"></div>

  <!-- Mobile Menu -->
  <div class="fixed right-0 top-0 w-72 bg-gray-900 p-6 transform translate-x-full peer-checked:translate-x-0 transition-transform duration-300 ease-in-out lg:hidden h-screen z-[9999] flex flex-col justify-between">
    
    <div>
      <div class="flex items-center justify-between mb-6">
        <a href="/" class="-m-1.5 p-1.5">
          <img class="h-12 w-auto" src="/images/logo.webp" alt={company} />
        </a>
        <label for="menu-toggle" class="cursor-pointer -m-2.5 p-2.5 text-gray-400 z-[9999]">
          <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5"
              d="M6 18L18 6M6 6l12 12" />
          </svg>
        </label>
      </div>

      <div class="space-y-4">
        <a href={`/${lang}/`} class="block text-lg font-semibold text-white hover:bg-gray-800 p-2 rounded">{t("navbar.home")}</a>
        <a href={`/${lang}/about`} class="block text-lg font-semibold text-white hover:bg-gray-800 p-2 rounded">{t("navbar.about")}</a>
        <a href={`/${lang}/menu`} class="block text-lg font-semibold text-white hover:bg-gray-800 p-2 rounded">{t("navbar.menu")}</a>
        <a href={`/${lang}/contact`} class="block text-lg font-semibold text-white hover:bg-gray-800 p-2 rounded">{t("navbar.contact")}</a>
        <a href={`/${lang}/map`} class="block text-lg font-semibold text-white hover:bg-gray-800 p-2 rounded">{t("navbar.map")}</a>
        <div class="pt-4">
          <LangSelector lang={lang} options={options} client:load />
        </div>
      </div>
    </div>
    <div class="pt-6 text-center text-white text-sm opacity-60">
      &copy; {new Date().getFullYear()} {company}. All rights reserved.
    </div>
  </div>
</div>